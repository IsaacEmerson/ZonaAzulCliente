<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="userData"
            type="br.com.syszona.syszonazonaazulclienteapp.models.User"/>
        <variable
            name="balance"
            type="br.com.syszona.syszonazonaazulclienteapp.models.Balance"/>

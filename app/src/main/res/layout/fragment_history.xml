<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="64dp"
    tools:context=".ui.activities.fragments.HistoryFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/footer"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
            android:id="@+id/confirm_buy_credit"
            android:textColor="#FFFF"
            android:text="Compras"
            android:layout_weight="2"
            android:background="@drawable/custom_button"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
            <Button
                android:textColor="#000"
                android:text="Ativações"
                android:layout_weight="2"
                android:background="@drawable/custom_button_white"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:drawableRight="@drawable/ic_extract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 de Janeiro"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="Placa : ABC-1234" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_margin="5dp"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="Data : 00/00/0000 " />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_margin="5dp"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="Tipo do Veículo : CARRO " />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="Cidade : Juazeiro do Norte" />
    </LinearLayout>
    </LinearLayout>
</FrameLayout>
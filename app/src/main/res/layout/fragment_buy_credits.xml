<?xml version="1.0" encoding="utf-8"?>
<layout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="64dp"
    tools:context=".ui.fragments.BuyCreditsFragment">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="47dp"
        android:fillViewport="true">
           <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fdfdfe"
            android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_margin="10dp"
                        android:textSize="23sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seu Saldo Atual"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_margin="6dp"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ 100.00"
                        android:textStyle="bold" />
                    <ImageView
                        android:src="@mipmap/ticket"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10dp"
                        android:textSize="23sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valor a ser Comprado"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_margin="6dp"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ 000.00"
                        android:textStyle="bold" />
                    <ImageView
                        android:src="@mipmap/money"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"/>

                </LinearLayout>

               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_horizontal"
                   android:textSize="15sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Clique para adicionar crÃ©ditos"
                   android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_marginTop="15dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:measureAllChildren="false"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="74dp"
                            android:layout_margin="3dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="74dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="5dp"
                                    android:src="@mipmap/rate1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="R$ 5.00"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="74dp"
                            android:layout_margin="3dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="74dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="5dp"
                                    android:src="@mipmap/rate2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="R$ 10.00"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="74dp"
                            android:layout_margin="3dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="74dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="5dp"
                                    android:src="@mipmap/rate3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="R$ 50.00"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="74dp"
                            android:layout_margin="3dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="74dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="5dp"
                                    android:src="@mipmap/rate4" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="R$ 100.00"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>
        
               <Button
                   android:layout_margin="20dp"
                   android:layout_gravity="center_horizontal"
                   android:textColor="#FFFF"
                   android:text="Limpar"
                   android:background="@drawable/custom_button"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <ImageView
                   android:src="@mipmap/bandeiras"
                   android:layout_width="match_parent"
                   android:layout_height="60dp" />

           </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/footer"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/confirm_buy_credit"
                android:textColor="#FFFF"
                android:text="Confirmar Compra"
                android:layout_weight="2"
                android:background="@drawable/custom_button"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
                
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
</layout>